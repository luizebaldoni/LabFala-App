<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#4D4F9BA2"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/TEXT"
        android:layout_width="963dp"
        android:layout_height="230dp"
        android:background="#00000000"
        android:fontFamily="@font/bungee"
        android:text="@string/lab_fala"
        android:textAlignment="center"
        android:textColor="#005359"
        android:textSize="130sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.583"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.043" />

    <LinearLayout
        android:id="@+id/botao1"
        android:layout_width="925dp"
        android:layout_height="427dp"
        android:background="#00FFFFFF"
        android:fontFamily="@font/bungee"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.563"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.849">

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="267dp"
            android:background="#00FFFFFF"
            android:contentDescription="@string/todo"
            android:fontFamily="@font/bungee"
            app:srcCompat="@drawable/avaliacaoo_play" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="851dp"
            android:layout_height="110dp"
            android:fontFamily="@font/bungee"
            android:paddingStart="15dp"
            android:paddingTop="0dp"
            android:text="@string/avalia_o_de_fala_infantil"
            android:textColor="#000000"
            android:textSize="48sp"
            tools:ignore="RtlSymmetry,TextSizeCheck" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>